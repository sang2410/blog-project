FROM node:21 AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
# Truyền biến môi trường vào build
ARG VITE_API_PATH
ENV VITE_API_PATH=${VITE_API_PATH}
COPY . .
RUN npm run build

FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]